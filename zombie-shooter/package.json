{
  "name": "zombie-shooter",
  "version": "1.0.0",
  "description": "Top-down zombie shooter (Canvas) with Electron packaging for Windows",
  "main": "electron/main.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder -w",
    "dist:win": "electron-builder --win",
    "pack": "electron-builder --dir"
  },
  "devDependencies": {
    "electron": "^31.3.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.example.zombieshooter",
    "productName": "Zombie Shooter",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "index.html",
      "styles.css",
      "src/**/*",
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": ["nsis"]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    }
  }
}
